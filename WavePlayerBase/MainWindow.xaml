<Window x:Name="windowMain" x:Class="WavePlayerBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Main Window" Height="160" Width="180" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid x:Name="gridMain">
        <Button x:Name="buttonOpen" Content="Open" HorizontalAlignment="Left" Margin="10,10,0,0" Width="140" Height="30" Click="ButtonOpen_Click" VerticalAlignment="Top"/> 
        <Button x:Name="buttonPlay" Content="Play" HorizontalAlignment="Left" Margin="10,45,0,0" Width="140" Height="30" Click="ButtonPlay_Click" VerticalAlignment="Top"/>
        <Button x:Name="buttonStop" Content="Stop" HorizontalAlignment="Left" Margin="10,80,0,0" Width="140" Height="30" Click="ButtonStop_Click" VerticalAlignment="Top"/>
    </Grid>
</Window>